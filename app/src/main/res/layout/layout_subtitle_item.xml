<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingVertical="8dp"
    android:paddingHorizontal="2dp"
    android:foreground="@drawable/ripple_effect">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_centerVertical="true"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/in_screen"
        android:textSize="12sp"
        android:singleLine="true"
        android:id="@+id/text" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/start_and_end"
        android:textSize="12sp"
        android:textColor="#1cfc03"
        android:text="â€¢"
        android:id="@+id/in_screen" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/drag_handler"
        android:textSize="12sp"
        android:textColor="?attr/colorSecondaryVariant"
        android:id="@+id/start_and_end" />

    <ImageView
        android:layout_height="20dp"
        android:layout_width="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_drag"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/drag_handler" />

</RelativeLayout>